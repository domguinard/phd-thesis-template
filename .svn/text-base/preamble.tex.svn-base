% Macro for derivees
\newcommand{\derive}[2]{\frac{\textrm{d}#1}{\textrm{d}#2}}


% Renew each section so we get a tabulation after the section start
\let\Oldsection\section
\renewcommand{\section}[1]{\Oldsection{#1}\pg }
\let\Oldsubsection\subsection
\renewcommand{\subsection}[1]{\Oldsubsection{#1}\pg }

% chapter without number (i.e. chapter*), fixed headers and add to TOC
\newcommand{\schapter}[1]{
  \chapter*{Appendix #1\markboth{#1}{#1}}
  \addcontentsline{toc}{chapter}{Appendix #1}
}


% This is to insert the nice quote at the beginning of the chapter
\newcommand{\cquote}[2]{
	\pg
	\begin{flushright}
	\emph{"#1"}
	\pg #2 \pg\pg\pg
	\end{flushright}
	\pg
}

% Inserts a picture as a figure with a reference 
\newcommand{\pix}[3]{
	\begin{figure}[!htb]
	\begin{center}
	\includegraphics[width=#2cm]{pictures/#1}
	\end{center}
	\caption{\label{fig:#1} #3}
	\end{figure}
}

% inserts a picture as a figure with a reference.
% #1 path to the picture
% #2 name of the picture
% #3 with of the picture
% #4 label of the figure
% #5 caption of the figure
\newcommand{\pixPath}[5]{
	\begin{figure}[!htb]
	\begin{center}
	\includegraphics[width=#3cm]{#1/#2}
	\end{center}
	\caption{\label{fig:#4} #5}
	\end{figure}
}

% Inserts a picture as a figure with a reference 
\newcommand{\dbpix}[4]{
	\begin{figure}[!htb]
	\begin{center}
	\begin{minipage}{\linewidth}  % Choose here the width of the minipage
	  \begin{minipage}{0.5\linewidth}
		\includegraphics[width=\linewidth]{#1.jpg}
	  \end{minipage}%
	  \hspace{\fill}%
	  \begin{minipage}{0.5\linewidth}%
		\includegraphics[width=\linewidth]{#2.jpg}  
	  \end{minipage}
	\end{minipage}
	\end{center}
	\caption{\label{#3} #4}
	\end{figure}
}

